@model IEnumerable<HCP_Demo.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="search" placeholder="Search By Title & ISBN" value="@ViewData["searchfilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Clear</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ISBN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.List_Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.List_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
            
        </tr>
        <tr>
            <td colspan="5">
                <table class="table-striped">
                    <tr><td><b>Customers who favorite this product.</b></td></tr>
                    @foreach (var subitem in item.Favorites)
                    {
                        <tr>
                            <td><b>Customer Name:</b></td>
                            <td>@Html.DisplayFor(modelItem => subitem.Customer.FirstName) @Html.DisplayFor(modelItem => subitem.Customer.LastName)</td>
                        </tr>
                    }
                </table>
            </td>
        </tr>
            }
    </tbody>
</table>
